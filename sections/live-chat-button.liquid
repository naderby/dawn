<button 
        onclick="window.LiveChatWidget.call('minmize');"
        type="button"
        class="live-chat-button-custom"
        id="chatButton_{{section.id}}"
        style="
               background-color:{{section.settings.live_chat_button_bg}};
               color:{{section.settings.live_chat_button_colour}};
               ">
	{{section.settings.live_chat_button_text}}
</button>
{% schema %}
  {
    "name": "Live Chat Button",
    "settings": [
      {
        "id": "live_chat_button_text",
        "type": "text",
        "label": "Button Text",
        "default": "Click here to chat!"
      },
      {
        "id": "live_chat_button_colour",
        "type": "color",
        "label": "Text Colour",
        "default": "#000000"
      },
	  {
		"id": "live_chat_button_bg",
        "type": "color",
        "label": "Button Colour",
        "default": "#bed63a"
	  }
    ]
}
{% endschema %}
